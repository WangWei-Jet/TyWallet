<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="80dp"
        android:textSize="16sp"
        android:text="账户地址:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_et"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:textSize="14dp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:layout_marginRight="6dp"
            android:id="@+id/bt_scan_address"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:background="@drawable/common_bt"
            android:text="扫码获取地址"
            android:textSize="14sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="6dp"
            android:id="@+id/bt_import_address"
            android:background="@drawable/common_bt"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="导入已保存地址"
            android:textSize="14sp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:id="@+id/bt_query_balance"
        android:background="@drawable/common_bt"
        android:text="查询余额"
        android:textSize="14sp"/>

    <!--<TextView android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="query fragment"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"/>-->

</LinearLayout>
